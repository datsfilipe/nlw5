{
  "compilerOptions": {
    "lib": ["ES2018"],
    "target": "es2017",
    "module": "commonjs", 
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}